{% comment %}
This is the banner section for features page.
{% endcomment %}
{% assign using_orgs = site.data.organizations | where:"is_using",true %}
<div class="root__row picture-banner features-banner">
  {% include components/picture-banner-background.liquid image_url="test/mad-max-beyond-thunderdome.jpg" %}
  <div class="root__row-content picture-banner__text banner-text">
    <h1>
      <div>Easy data collection,</div>
      <div>in every context,</div>
      <div>for everyone.</div>
    </h1>

    <h2>Trusted by organizations making a difference around the world</h2>

    <ul class="features-banner__logos" data-child-cycler>
      {% for org in using_orgs %}
        <li>
          <a href="{{org.website_url}}" title="{{org.name}}">
            <load-file replaceWith src="{{site.baseurl}}/assets/images/{{org.image_url}}"></load-file>
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
